// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  //User information
  telegramId Int      @id
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  timeZone   Int      @default(8)

  forrayDef forrayDef[]
  forrayAtk forrayAtk[]
  trader    trader[]

  //Stats as we will be clearing older forrai data
  forrayAtkHit  Int @default(0)
  forrayAtkMiss Int @default(0)
  atkXp         Int @default(0)
  atkGold       Int @default(0)

  forrayDefHit  Int @default(0)
  forrayDefMiss Int @default(0)
  defXp         Int @default(0)
  defGold       Int @default(0)

  traderHit  Int @default(0)
  traderXp   Int @default(0)
  traderGold Int @default(0)
}

model forrayDef {
  time           DateTime @id
  miss           Boolean
  gold           Int
  xp             Int
  user           User     @relation(fields: [userTelegramId], references: [telegramId])
  userTelegramId Int
}

model forrayAtk {
  time           DateTime @id
  miss           Boolean
  gold           Int
  xp             Int
  user           User     @relation(fields: [userTelegramId], references: [telegramId])
  userTelegramId Int
}

model trader {
  time           DateTime @id
  gold           Int
  xp             Int
  user           User     @relation(fields: [userTelegramId], references: [telegramId])
  userTelegramId Int
}
